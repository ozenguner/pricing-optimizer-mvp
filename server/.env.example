# Database Configuration
# SQLite for development (change to PostgreSQL for production)
DATABASE_URL="file:./dev.db"

# JWT Authentication Configuration
# IMPORTANT: Change this to a secure secret in production (32+ characters)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"

# Security Configuration (Optional - uses defaults if not set)
# Rate limiting settings (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration (Optional - defaults to localhost in development)
# CORS_ORIGIN="http://localhost:3000"
# CORS_CREDENTIALS="true"

# Database Connection Pool (Optional - for production PostgreSQL)
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_TIMEOUT=5000

# Logging Configuration (Optional)
# LOG_LEVEL="info"
# LOG_FILE_PATH="./logs/app.log"

# File Upload Configuration (Optional)
# MAX_FILE_SIZE_MB=10
# ALLOWED_FILE_TYPES="csv,xlsx"

# Email Service Configuration
# Default sender information
EMAIL_DEFAULT_FROM_ADDRESS="noreply@ratecardlab.com"
EMAIL_DEFAULT_FROM_NAME="RateCard Lab"

# SendGrid Configuration (Production)
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"

# SMTP Configuration (Staging/Backup)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email Service Settings
EMAIL_MAX_RETRY_ATTEMPTS="3"
EMAIL_BASE_RETRY_DELAY="1000"  # milliseconds
EMAIL_MAX_RETRY_DELAY="10000"  # milliseconds

# Email Logging Configuration
EMAIL_LOGGING_ENABLED="true"
EMAIL_LOG_LEVEL="info"  # debug, info, warn, error
EMAIL_LOG_SENSITIVE_DATA="false"  # Only set to true in development

# Development-specific Email Settings
EMAIL_ENABLE_SMTP_IN_DEV="false"
EMAIL_ENABLE_SENDGRID_IN_DEV="false"

# Email Template Configuration
EMAIL_TEMPLATE_DIR="src/templates/email"
EMAIL_TEMPLATE_CACHE="true"
EMAIL_SUPPORT_ADDRESS="support@ratecardlab.com"
BASE_URL="http://localhost:3000"

# Redis Configuration (Future caching feature - optional)
# REDIS_URL="redis://localhost:6379"
# REDIS_TTL_SECONDS=3600

# Production Database Example (uncomment for production)
# DATABASE_URL="postgresql://username:password@localhost:5432/ratecardlab"

# Production JWT Secret Example (generate a secure secret)
# JWT_SECRET="your-ultra-secure-256-bit-secret-key-for-production-use-only"