# API Configuration
# Backend API URL - update for production deployment
VITE_API_URL="http://localhost:5000"

# Application Configuration
VITE_APP_NAME="RateCardLab"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Pricing Optimization Platform"

# Development Configuration
# Enable dev tools and debugging (development only)
VITE_DEV_TOOLS="true"
VITE_DEBUG_MODE="true"

# Feature Flags (Optional)
# Toggle features on/off for different environments
VITE_ENABLE_SHARING="true"
VITE_ENABLE_CSV_IMPORT="true"
VITE_ENABLE_ANALYTICS="true"

# UI Configuration (Optional)
# Customize the app appearance
VITE_THEME="light"
VITE_PRIMARY_COLOR="#3B82F6"
VITE_BRAND_LOGO_URL="/assets/logo.png"

# Performance Configuration (Optional)
# Control performance optimizations
VITE_ENABLE_PWA="false"
VITE_ENABLE_SERVICE_WORKER="false"

